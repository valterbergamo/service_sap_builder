<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:f="sap.f"
    controllerName="xcop.fsc.service.controller.App"
>
    <tnt:ToolPage
        id="app"
        class="sapUiDemoToolPage"
    >
        <tnt:header>
            <tnt:ToolHeader>
                <core:Fragment
                    fragmentName="xcop.fsc.service.view.fragments.fmHeader"
                    type="XML"
                />
            </tnt:ToolHeader>
        </tnt:header>

        <tnt:sideContent>
            <tnt:SideNavigation id="sideNavigation">
                <tnt:NavigationList
                    items="{ path: 'menu>/navigation/results', 
                                         templateShareable: true }"
                >
                    <tnt:NavigationListItem
                        select="onClickMenu"
                        text="{path: 'menu>Titlei18nkey'}"
                        icon="{menu>Icon}"
                        expanded="{menu>Expanded}"
                        items="{ path: 'menu>items/results',
                             templateShareable: true }"
                        key="{menu>Key}-{menu>Navto}"
                    >
                        <tnt:NavigationListItem
                            select="onClickMenu"
                            text="{path: 'menu>Titlei18nkey'}"
                            key="{menu>Key}-{menu>Navto}"
                        />
                    </tnt:NavigationListItem>
                </tnt:NavigationList>
                <tnt:fixedItem>
                    <tnt:NavigationList
                        items="{ path: 'menu>/fixedNavigation/results',
                             templateShareable: true }"
                    >
                        <tnt:NavigationListItem
                            select="onClickMenu"
                            text="{ path: 'menu>Titlei18nkey'}"
                            icon="{menu>Icon}"
                            key="{menu>Key}-{menu>Navto}"
                        />
                    </tnt:NavigationList>
                </tnt:fixedItem>
            </tnt:SideNavigation>
        </tnt:sideContent>

        <tnt:mainContents>
            <f:FlexibleColumnLayout id="mainContents" stateChange="onStateChanged" backgroundDesign="Solid" />
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
